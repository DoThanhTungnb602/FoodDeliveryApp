<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_auth">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.fooddeliveryapp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_navigation_home_to_navigation_cart"
            app:destination="@id/navigation_cart" />
    </fragment>

    <fragment
        android:id="@+id/navigation_shop"
        android:name="com.example.fooddeliveryapp.ui.shop.ShopFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_shop">
        <action
            android:id="@+id/action_navigation_dashboard_to_cartFragment"
            app:destination="@id/navigation_cart" />
    </fragment>

    <fragment
        android:id="@+id/navigation_user"
        android:name="com.example.fooddeliveryapp.ui.user.UserFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_user">
        <action
            android:id="@+id/action_navigation_notifications_to_cartFragment"
            app:destination="@id/navigation_cart" />
    </fragment>

    <fragment
        android:id="@+id/navigation_auth"
        android:name="com.example.fooddeliveryapp.ui.auth.AuthFragment"
        android:label="fragment_auth"
        tools:layout="@layout/fragment_auth">
        <action
            android:id="@+id/action_navigation_auth_to_navigation_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/navigation_auth"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_cart"
        android:name="com.example.fooddeliveryapp.ui.cart.CartFragment"
        android:label="fragment_cart"
        tools:layout="@layout/fragment_cart" />

</navigation>